<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demotest">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.application.ImoocApplication"
        android:allowBackup="true"
        android:icon="@mipmap/bg_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.activity.HomeActivity" />
        <activity android:name="com.example.activity.SettingActivity" />
        <activity android:name="com.example.activity.LoginActivity" />
        <activity android:name="com.example.activity.MessageActivity" />
        <activity android:name="com.example.activity.PhotoViewActivity" />
        <activity android:name="com.example.activity.CaptureActivity" />
        <activity android:name="com.example.activity.SearchActivity" />

        <service android:name="com.example.service.update.UpdateService" />
        <service android:name="com.example.network.mina.MinaService" />

        <activity android:name="com.example.activity.CourseDetailActivity"></activity>
    </application>

</manifest>